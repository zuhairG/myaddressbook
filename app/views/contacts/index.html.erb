
<h1>My Contacts</h1>

<table class="table table-striped table-condensed" name="results">
  <display:table class="table table-striped table-condensed" name="results">

  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @contacts.each do |contact| %>
    <% if current_user %>
        <% if (contact.user_id == current_user.id) %>

      <tr>
        <td><%= link_to contact.first_name, contact %></td>
        <td><%= contact.last_name %></td>
      </tr>
      <% end %>
        <% end %>

    <% end %>
  </tbody>
</table>
</display:table>
<br>

<%= link_to 'New Contact', new_contact_path, :class=>"btn btn-primary"%>
